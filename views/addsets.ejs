<!DOCTYPE html>
<html>
    <head>
        <title>Practice</title>
        <link rel="stylesheet" href="/css/theme.css" />
    </head>
    <body>
        <%- include("partials/navbar", {page: '/addsets'}) %>

        <div class="container">
            <h1>Add Set</h1>
            <p>
                This page will alter sets in the array.
            </p>
            <form method="post" action="/lego/addsets">
                <label for="set_num">Set Number:</label>
                <input type="number" id="set_num" name="set_num" class="input-field regular" required>
                <br />
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" class="input-field regular" required>
                <br />
                <label for="year">Year:</label>
                <input type="number" id="year" name="year" class="input-field regular" required>
                <br />
                <label for="theme_id">Theme:</label>
                <select id="theme_id" name="theme_id" class="input-field regular" required>
                    <option value="">Select Theme</option>
                    <!-- Loop through themes and generate options dynamically -->
                    <% themes.forEach(theme => { %>
                        <option value="<%= theme.id %>">
                            <%= theme.name %>
                        </option>
                    <% }) %>
                </select>
                <br />
                <label for="num_parts">Num Parts:</label>
                <input type="number" id="num_parts" name="num_parts" class="input-field regular" required>
                <br />
                <label for="img_url">Image Url:</label>
                <input type="url" id="img_url" name="img_url" class="input-field regular" required>
                <br />
                <button type="submit">Submit</button>
              </form>
                
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        

    </body>
    </html>