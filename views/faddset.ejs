<!DOCTYPE html>
<html lang="en">

<head>
    <title>Add Set</title>
    <link rel="stylesheet" href="/css/test2.css" />
</head>

<body>
    <!-- Navbar -->
    <%- include("partials/navbar", { page: '/faddsets' }) %>

    <section class="bg-light text-center py-5">
        <div class="container">
            <h1>Add Set</h1>
            <p>
                This page will alter sets directly into the JSON file.
            </p>
        </div>
    </section>

    <div class="container">
        <form method="post" action="/addsets" class="form-container">
            <div class="form-group">
                <label for="set_num">Set Number:</label>
                <input type="number" id="set_num" name="set_num" class="input-field" required>
            </div>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" class="input-field" required>
            </div>
            <div class="form-group">
                <label for="year">Year:</label>
                <input type="number" id="year" name="year" class="input-field" required>
            </div>
            <div class="form-group">
                <label for="theme_id">Theme:</label>
                <select id="theme_id" name="theme_id" class="input-field" required>
                    <option value="">Select Theme</option>
                    <!-- Loop through themes and generate options dynamically -->
                    <% themes.forEach(theme => { %>
                        <option value="<%= theme.id %>"><%= theme.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label for="num_parts">Num Parts:</label>
                <input type="number" id="num_parts" name="num_parts" class="input-field" required>
            </div>
            <div class="form-group">
                <label for="img_url">Image URL:</label>
                <input type="url" id="img_url" name="img_url" class="input-field" required>
            </div>
            <div class="form-group">
                <button type="submit" class="submit-button">Submit</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
