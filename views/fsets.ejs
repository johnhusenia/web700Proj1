<!DOCTYPE html>
<html>

<head>
  <title>Practice</title>
  <link rel="stylesheet" href="/css/test3.css" />
</head>

<body>
  <!-- Navbar -->
  <%- include("partials/navbar", {page: "/sets"}) %>

  <br />

  <!-- Page Section -->
  <section class="bg-light text-center py-5">
      <div class="container">
          <h1>Collection</h1>
          <p>This page will alter sets directly into a JSON file.</p>
      </div>
  </section>

  <!-- Collection Table -->
  <section class="collection-container container">
      <div class="collection-list">
          <% sets.forEach(set => { %>
          <div class="collection-item">
              <div class="collection-image">
                  <!-- <div class="rounded" style="background-image: url('<%= set.img_url %>');"></div> -->
                  <div class="rounded" style="width: 8rem; height: 8rem; background-image: url('<%= set.img_url %>'); background-size: cover; background-position: center;"></div>
              </div>
              <div class="collection-text">
                  <h3><%= set.name %> 
                      <span class="theme-badge"><%= set.theme %></span>
                  </h3>
                  <span><strong>Year:</strong> <%= set.year %> - <strong>Parts:</strong> <%= set.numparts %></span>
              </div>
              <div class="details-button-container">
                  <a href="/fset/<%= set.set_num %>" class="details-button">Details</a>
              </div>
          </div>
          <% }) %>
      </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>

</html>
